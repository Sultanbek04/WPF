<Window x:Class="ClientTCPHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTCPHW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Please write some message to server: "/>
            <TextBox Text="" Name="tbMessage" Height="25" VerticalAlignment="Top"/>
            <Button Width="100"  Height="50" VerticalAlignment="Top" Content="Confirm" Click="Confirm_Click"/>
         
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Name="spLogs">
            <TextBlock Text="Logs" />
        </StackPanel>

    </Grid>
</Window>
