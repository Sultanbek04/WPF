<Window x:Class="WPFAcquaintance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAcquaintance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="click_me" Content="Click Me!" Foreground="CadetBlue" Background="Coral" FontSize="35" FontStyle="Italic" FontWeight="DemiBold" Width="200" Height="75" VerticalAlignment="Top" HorizontalAlignment="Left" Click="click_me_Click"/>
        <TextBlock x:Name="david" Text="Hello David!" VerticalAlignment="Top"  Height="75" HorizontalAlignment="Center"/>
            <TextBlock x:Name="nikita" Text="Hello Nikita!" VerticalAlignment="Center"  Height="75" HorizontalAlignment="Center" Margin="0 50 0 0"/>
        <TextBlock x:Name="vitaly" Text="Hello Vitaly!" VerticalAlignment="Bottom"  Height="75" HorizontalAlignment="Center" Margin="0 100 0 0"/>
    </Grid>
</Window>
