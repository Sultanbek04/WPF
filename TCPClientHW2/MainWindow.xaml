<Window x:Class="TCPClientHW2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPClientHW2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="currencies" Width="300" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" SelectionChanged="Currencies_SelectionChanged" >
        </ComboBox>

        <ScrollViewer  Height="300" VerticalAlignment="Center " Margin="0 100 0 0"  HorizontalScrollBarVisibility="Visible">
            <StackPanel x:Name="spForLogs" Height="300" VerticalAlignment="Center" Width="700" />
        </ScrollViewer>
    </Grid>
</Window>
